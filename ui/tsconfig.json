{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types/declarations"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "brain": [
        "./src/brain"
      ],
      "types": [
        "./src/brain/data-contracts.ts"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "app": [
        "./src/app"
      ],
      "app/auth": [
        "./src/app/auth"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/hooks/*": [
        "./src/extensions/shadcn/hooks/*"
      ],
      "contexts/*": [
        "./src/contexts/*"
      ],
      "@/components/hooks/*": [
        "./src/extensions/shadcn/hooks/*"
      ],
      "@/components/ui/*": [
        "./src/extensions/shadcn/components/*"
      ],
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/brain/Brain.ts",
    "src/brain/BrainRoute.ts",
    "src/brain/data-contracts.ts",
    "src/brain/http-client.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}