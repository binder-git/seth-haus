{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "utils/*": ["./src/utils/*"],
      "hooks/*": ["./src/hooks/*"],
      "contexts/*": ["./src/contexts/*"],
      "services/*": ["./src/services/*"],
      "pages/*": ["./src/pages/*"],
      "types": ["./src/types/index"],
      "types/*": ["./src/types/*"],
      "@/components/ui/*": ["./src/extensions/shadcn/components/*.tsx", "./src/extensions/shadcn/components/*.ts"],
      "@/hooks/use-toast": ["./src/extensions/shadcn/hooks/use-toast.ts"],
      "@/components/ui/toast": ["./src/extensions/shadcn/components/toast.tsx"]
    },
    "composite": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}