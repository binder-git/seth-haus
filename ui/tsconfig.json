{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "composite": true,
    "useDefineForClassFields": true,
    
    /* Emit */
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    
    /* Paths */
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "utils/*": ["./src/utils/*"],
      "hooks/*": ["./src/hooks/*"],
      "contexts/*": ["./src/contexts/*"],
      "services/*": ["./src/services/*"],
      "pages/*": ["./src/pages/*"],
      "types": ["./src/types/index"],
      "types/*": ["./src/types/*"],
      "@/components/ui/*": [
        "./src/extensions/shadcn/components/*.tsx",
        "./src/extensions/shadcn/components/*.ts"
      ],
      "@/hooks/use-toast": [
        "./src/extensions/shadcn/hooks/use-toast.ts"
      ],
      "@/components/ui/toast": [
        "./src/extensions/shadcn/components/toast.tsx"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}